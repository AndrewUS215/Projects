<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://studentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.radius.web.screens.student">
    <data>
        <instance id="studentDc"
                  class="com.company.radius.entity.Student">
            <view extends="_local">
                <property name="group" view="_minimal">
                    <property name="number"/>
                    <property name="faculty"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="studentDc">
            <column width="350px">
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <textField id="patronymicField" property="patronymic"/>
                <dateField id="birthDateField" property="birthDate"/>
                <pickerField id="groupField" property="group">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <accordion/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
